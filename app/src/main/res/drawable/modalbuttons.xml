<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#FF7171"
                android:endColor="#FE3C3C"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:endColor="#FF7171"

                android:startColor="#FE3C3C"
                android:angle="270" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:endColor="#FE3C3C"
                android:startColor="#FF7171"
                android:angle="270" />
        </shape>
    </item>
</selector>
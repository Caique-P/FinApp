<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLogin">

    <VideoView
        android:id="@+id/backgroundVideo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#31000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></VideoView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/roundedconers"
        android:backgroundTint="#4F000000"
        android:enabled="false"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">

        <Button
            android:id="@+id/login"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:enabled="true"
            android:foregroundGravity="left|clip_vertical"
            android:padding="10dp"
            android:text="UsuÃ¡rio e senha"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/withGoogle"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:backgroundTintMode="add"
            android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
            android:foregroundGravity="left|clip_vertical"
            android:padding="10dp"
            android:text="Entrar com Google"
            android:textSize="16sp"
            app:iconPadding="0dp"
            app:iconSize="0dp"
            app:iconTintMode="src_in"></Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/LogoImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/roundedconers"
        android:backgroundTint="#2A000000"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/logo2" />

</androidx.constraintlayout.widget.ConstraintLayout>